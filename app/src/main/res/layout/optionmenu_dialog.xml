<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="end">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="1dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/option_background"
        android:backgroundTint="@color/background"
        tools:ignore="RtlCompat"
        android:layout_marginStart="150dp">


            <LinearLayout
                android:id="@+id/mNight"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="start"
                    android:text=" Dark Mode"
                    android:textColor="@color/textcolor"
                    android:textSize="14dp" />

            </LinearLayout>

        <View
            android:id="@+id/lin1"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_below="@+id/mNight"
            android:background="@color/linear" />

            <LinearLayout
                android:id="@+id/mday"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/lin1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/nightmode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="start"
                    android:text=" Light Mode"
                    android:textColor="@color/textcolor"
                    android:textSize="14dp" />

            </LinearLayout>
            <View
                android:id="@+id/lin2"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_below="@+id/mday"
                android:background="@color/linear" />
            <LinearLayout
                android:id="@+id/all_image"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/mday"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="start"
                    android:text=" All Image"
                    android:textColor="@color/textcolor"
                    android:textSize="14dp" />

            </LinearLayout>
        <View
            android:id="@+id/lin3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/all_image"
            android:background="@color/linear" />

        <LinearLayout
            android:id="@+id/column_types"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/lin3"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="start"
                android:text="Column Types"
                android:textColor="@color/textcolor"
                android:textSize="14dp" />

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>

</layout>